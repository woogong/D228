<!DOCTYPE html>
<html lang="ko">

<head>
    <%- include ("../include/declare.ejs") %>

    <style>

    </style>

    <script src="/js/jquery.form.min.js"></script>
    <script src="/js/woogong/form_checker.js"></script>
    <script src="/js/page/merit_register.js"></script>

</head>

<body>

    <%- include ("../include/header.ejs") %>

    <div class="container">
        <div class="panel-heading">
            <h3 class="panel-title">유공자등록</h3>
        </div>

        <form id="the_form" method="post" action="/rest/merit/register.do">
            <div class="form-group row">
                <label for="cmb_member" class="col-sm-2 col-form-label">회원</label>
                <div class="col-sm-3">
                    <select name="memberSeq" class="form-control" id="cmb_member">
                        <option></option>
                    </select>
                </div>
                <div class="col-sm-2">
                    <input type="text" class="form-control" id="txt_member" placeholder="검색">
                </div>
            </div>
            <div class="form-group row">
                <label for="txt_id" class="col-sm-2 col-form-label">연번</label>
                <div class="col-sm-2">
                    <input type="text" name="meritId" class="form-control user_input_check" id="txt_id" data-rule="required" data-regex="^\d{4}$" data-guide-message="숫자 4자리를 입력하세요." data-regex-message="숫자 4자리를 입력하세요." data-rule-api="/rest/merit/merit_id_unique.do" data-rule-api-message="중복된 연번입니다." autocomplete="off">
                </div>
                <button class="btn btn-outline-primary btn-sm col-sm-1" id="btn_id_make" style="font-size: 12px;">연번만들기</button>   
            </div>
            <div class="form-group row">
                <label for="txt_name" class="col-sm-2 col-form-label">성명</label>
                <div class="col-sm-3">
                    <input type="text" name="name" class="form-control user_input_check" data-rule="required" id="txt_name" autocomplete="off">
                </div>
            </div>
            <!-- <div class="form-group row">
                <label for="txt_name" class="col-sm-2 col-form-label">주민등록번호</label>
                <div class="col-sm-2">
                    <input type="text" name="jumin1" class="form-control user_input_check" id="txt_jumin1" autocomplete="off">
                </div>
                <div class="col-sm-1">
                    <input type="text" name="jumin2" class="form-control user_input_check" id="txt_jumin2" autocomplete="off">
                </div>
            </div> -->
            <div class="form-group row">
                <label for="txt_birthday" class="col-sm-2 col-form-label">생년월일</label>
                <div class="col-sm-3">
                    <input type="text" name="birthday" class="form-control user_input_check" id="txt_birthday" data-rule="yyyy-mm-dd" data-guide-message="YYYY-MM-DD 형식으로 입력하세요." autocomplete="off">
                </div>
            </div>
            <div class="form-group row">
                <label for="txt_jumin_no" class="col-sm-2 col-form-label">주민등록번호</label>
                <div class="col-sm-3">
                    <input type="text" name="juminNo" class="form-control user_input_check" id="txt_jumin_no" data-guide-message="000000-1****** 형식으로 입력하세요." autocomplete="off">
                </div>
            </div>
            <div class="form-group row">
                <label for="txt_school" class="col-sm-2 col-form-label">출신학교</label>
                <div class="col-sm-3">
                    <input type="text" name="school" class="form-control" id="txt_school" autocomplete="off">
                </div>
            </div>
            <div class="form-group row">
                <label for="txt_graduate" class="col-sm-2 col-form-label">기수</label>
                <div class="col-sm-3">
                    <input type="text" name="graduate" class="form-control user_input_check" id="txt_graduate" data-regex="^\d{0,3}$" data-regex-message="3자리 이하의 숫자로 입력하세요." data-guide-message="3자리 이하의 숫자로 입력하세요." autocomplete="off">
                </div>
            </div>
            <div class="form-group row">
                <label for="txt_zipcode" class="col-sm-2 col-form-label">우편번호</label>
                <div class="col-sm-3">
                    <input type="text" name="zipcode" class="form-control user_input_check" id="txt_zipcode" data-rule="zipcode" autocomplete="off">
                </div>
            </div>
            <div class="form-group row">
                <label for="txt_address" class="col-sm-2 col-form-label">주소</label>
                <div class="col-sm-10">
                    <input type="text" name="address" class="form-control user_input_check" id="txt_address">
                </div>
            </div>
            <!-- <div class="form-group row">
                <label for="txt_phone_home" class="col-sm-2 col-form-label">전화번호(집)</label>
                <div class="col-sm-3">
                    <input type="text" name="phoneHome" class="form-control user_input_check" id="txt_phone_home" data-rule="phoneNumber" data-guide-message="'-'을 포함한 숫자를 입력하세요." autocomplete="off">
                </div>
            </div> -->
            <div class="form-group row">
                <label for="txt_phone_mobile" class="col-sm-2 col-form-label">휴대전화</label>
                <div class="col-sm-3">
                    <input type="text" name="phoneMobile" class="form-control user_input_check" id="txt_phone_mobile" data-rule="mobilePhoneNumber"data-guide-message="'-'을 포함한 숫자를 입력하세요."  autocomplete="off">
                </div>
            </div>
            <!-- <div class="form-group row">
                <label for="txt_email" class="col-sm-2 col-form-label">이메일</label>
                <div class="col-sm-3">
                    <input type="text" name="email" class="form-control user_input_check" id="txt_email" data-rule="email" autocomplete="off">
                </div>
            </div> -->
            <div class="form-group row">
                <label for="txt_note" class="col-sm-2 col-form-label">비고</label>
                <div class="col-sm-10">
                    <textarea name="note" class="form-control user_input_check" id="txt_note"></textarea>
                </div>
            </div>
            <div class="form-group row">
                <div class="col-sm-12" style="text-align: center;">
                    <button id="btn_save" type="submit" class="btn btn-primary">등록</button>
                </div>
            </div>
        </form>
    </div>

    <%- include ("../include/footer.ejs") %>

</body>

</html>