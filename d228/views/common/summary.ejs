                            <td class="text-center">0</td>
                            <td class="text-center">0</td>
                        </tr>
                    </tbody>               
                </table>
            </div>

            <div class="tab-pane fade" id="list_birthday_data" role="tabpanel" aria-labelledby="profile-tab">
                <table class="table" id="table_birthday_data">
                    <thead>
                        <tr class="filters">
                            <th>년도</th>
                            <th>회원수</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td class="text-center">2012년</td>
                            <td class="text-center">0</td>
                        </tr>
                    </tbody>               
                </table>
            </div>
        </div>
    </div>

    <%- include ("../include/footer.ejs") %>

